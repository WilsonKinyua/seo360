    "global": {
        "theme-light": {
            "background": "{color.background-light}",
            "background-surface": "{color.background-surface}",
            "text-primary": "{color.text-primary}",
            "text-secondary": "{color.text-secondary}",
            "text-muted": "{color.text-muted}",
            "border": "{color.border-light}",
            "shadow": "{shadow.md}"
        },
        "theme-dark": {
            "background": "{color.background-dark}",
            "background-surface": "#1E293B",
            "text-primary": "{color.text-inverse}",
            "text-secondary": "#CBD5E1",
            "text-muted": "#94A3B8",
            "border": "{color.border-dark}",
            "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.3)"
        }
    },
    "components": {
        "seo-score-ring": {
            "size": "120px",
            "thickness": "{chart.gauge-thickness}",
            "background": "{color.border-light}",
            "excellent": "{color.seo-score-excellent}",
            "good": "{color.seo-score-good}",
            "fair": "{color.seo-score-fair}",
            "poor": "{color.seo-score-poor}",
            "text": {
                "fontSize": "{typography.font-size-2xl}",
                "fontWeight": "{typography.font-weight-bold}"
            }
        },
        "metric-card": {
            "layout": {
                "padding": "{spacing.space-6}",
                "background": "{global.background-surface}",
                "borderRadius": "{border.radius-lg}",
                "border": "1px solid {global.border}",
                "shadow": "{global.shadow}",
                "transition": "all {animation.duration-normal} {animation.easing-ease-out}"
            },
            "title": {
                "fontFamily": "{typography.font-family-base}",
                "fontSize": "{typography.font-size-sm}",
                "fontWeight": "{typography.font-weight-medium}",
                "color": "{global.text-secondary}",
                "textTransform": "uppercase",
                "letterSpacing": "0.05em"
            },
            "value": {
                "fontSize": "{typography.font-size-3xl}",
                "fontWeight": "{typography.font-weight-bold}",
                "marginTop": "{spacing.space-2}",
                "color": "{global.text-primary}"
            },
            "trend": {
                "fontSize": "{typography.font-size-sm}",
                "fontWeight": "{typography.font-weight-medium}",
                "marginTop": "{spacing.space-1}",
                "positive": "{color.trend-positive}",
                "negative": "{color.trend-negative}",
                "neutral": "{color.trend-neutral}"
            },
            "states": {
                "hover": {
                    "transform": "translateY(-2px)",
                    "shadow": "{shadow.lg}"
                }
            }
        },
        "issue-priority": {
            "critical": {
                "background": "rgba(220, 38, 38, 0.1)",
                "border": "1px solid {color.priority-critical}",
                "color": "{color.priority-critical}",
                "icon": "alert-triangle"
            },
            "high": {
                "background": "rgba(234, 88, 12, 0.1)",
                "border": "1px solid {color.priority-high}",
                "color": "{color.priority-high}",
                "icon": "alert-circle"
            },
            "medium": {
                "background": "rgba(217, 119, 6, 0.1)",
                "border": "1px solid {color.priority-medium}",
                "color": "{color.priority-medium}",
                "icon": "alert"
            },
            "low": {
                "background": "rgba(101, 163, 13, 0.1)",
                "border": "1px solid {color.priority-low}",
                "color": "{color.priority-low}",
                "icon": "info"
            }
        },
        "data-table": {
            "header": {
                "background": "{global.background-surface}",
                "fontSize": "{typography.font-size-xs}",
                "fontWeight": "{typography.font-weight-semibold}",
                "color": "{global.text-secondary}",
                "textTransform": "uppercase",
                "letterSpacing": "0.05em",
                "padding": "{spacing.space-3} {spacing.space-4}"
            },
            "row": {
                "padding": "{spacing.space-4}",
                "borderBottom": "1px solid {global.border}",
                "states": {
                    "hover": {
                        "background": "rgba(42, 157, 143, 0.05)"
                    }
                }
            }
        },
        "chart-multi-line": {
            "primary": "{color.chart-primary}",
            "secondary": "{color.chart-secondary}",
            "tertiary": "{color.chart-tertiary}",
            "quaternary": "{color.chart-quaternary}",
            "strokeWidth": "{chart.line-width-normal}",
            "pointRadius": "{chart.point-radius}",
            "grid": {
                "stroke": "{color.chart-grid}",
                "strokeWidth": "1px",
                "opacity": "{chart.grid-opacity}"
            },
            "legend": {
                "fontSize": "{typography.font-size-sm}",
                "spacing": "{spacing.space-4}"
            }
        },
        "sidebar": {
            "width": "280px",
            "background": "{global.background}",
            "border": "1px solid {global.border}",
            "item": {
                "padding": "{spacing.space-3} {spacing.space-4}",
                "fontSize": "{typography.font-size-sm}",
                "fontWeight": "{typography.font-weight-medium}",
                "borderRadius": "{border.radius-md}",
                "margin": "{spacing.space-1}",
                "transition": "all {animation.duration-fast} {animation.easing-ease-out}",
                "default": {
                    "color": "{global.text-secondary}",
                    "background": "transparent"
                },
                "hover": {
                    "color": "{global.text-primary}",
                    "background": "{global.background-surface}"
                },
                "active": {
                    "color": "{color.brand-primary}",
                    "background": "rgba(42, 157, 143, 0.1)",
                    "fontWeight": "{typography.font-weight-semibold}"
                }
            }
        }
    },
